<form action="/register/new" method="post">
    <div class="col-12 col-md-4 d-inline-block text-sm-center text-lg-end">
        <label class="col-form-label text-center text-lg-end" for="user_name">User name:</label>        
    </div>
    <div class="col-12 col-md-6 d-inline-block mb-2">
        <input class="form-control" type="text" name="user_name" id="user_name" value="{{ fields.userName }}" placeholder="User name" required>
    </div>
    <div class="col-12 col-md-4 d-inline-block text-sm-center text-lg-end">
        <label class="col-form-label text-center text-lg-end" for="email">E-mail:</label>        
    </div>
    <div class="col-12 col-md-6 d-inline-block mb-2">
        <input class="form-control" type="email" name="email" id="email" value="{{ fields.email }}" placeholder="email@email.com" required>
    </div>
    <div class="col-12 col-md-4 d-inline-block text-sm-center text-lg-end">
        <label class="col-form-label text-center text-lg-end" for="password">Password:</label>       
    </div>       
    <div class="col-10 col-md-5 d-inline-block mb-2">
        <input class="form-control" type="password" name="password" id="password" value="{{ fields.password }}" placeholder="Enter your password" required>
    </div>
    <div class="col-1 col-md-1 d-inline-block ms-2 me-2 m-md-0">
        <img class="show_password" src="/images/eye.svg" alt="eye" height="20">
    </div>
    <div class="col-12 col-md-4 d-inline-block text-sm-center text-lg-end">
        <label class="col-form-label text-center text-lg-end" for="repeat_password">Repeat Password:</label>       
    </div>       
    <div class="col-10 col-md-5 d-inline-block mb-3">
        <input class="form-control" type="password" name="repeat_password" id="repeat_password" value="{{ fields.repeatPassword }}" placeholder="Repeat password" required>
    </div>
    <div class="col-1 col-md-1 d-inline-block ms-2 me-2 m-md-0">
        <img class="show_password" src="/images/eye.svg" alt="eye" height="20">
    </div>
    <div class="row mb-3">
        <label class="col-12 text-center col-form-label" for="strength">Strength Password:</label>
        <div id="strength" class="col-12 strength">                                        
            <div class="strength_bar" id="strength_bar"></div>                                    
        </div>
        <p class="message" id="message"></p>
    </div>
    <div class="col-sm-6 mx-auto form-check mb-3 legalTermsDiv">
        <input class="form-check-input me-2" type="checkbox" name="terms" id="terms" value="checked" required>
        <label class="form-check-label legalTerms" for="terms">I accept the Terms of Use and Privacy Policy</label>
    </div>        
    <div class="col-12 col-md-6 d-inline-block">
        <button class="btn btn-outline-secondary" type="submit">Register</button>
    </div>
    <div class="col-sm-8 mx-auto">
        <p class="mt-3 d-inline-block">Already have an account?</p> <a href="/login">Login</a>
    </div> 
</form>