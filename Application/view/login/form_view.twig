<form class="col-xl-7 mx-auto" action="/login" method="post">
    <input type="hidden" name="csrf_token" value="{% if fields.csrf_token is defined %}{{ fields.csrf_token }}{% endif %}">
    <div class="col-12 mb-md-2">
        <div class="col-12 col-md-3 d-inline-block text-center text-md-end">
            <label class="col-form-label text-center text-md-end" for="email">E-mail:</label>        
        </div>
        <div class="col-10 col-md-7 d-inline-block">
            <input class="form-control" type="email" name="email" id="email" value="{{ fields.email }}" placeholder="email@email.com" required>
        </div>
        <div class="col-1 col-md-1 d-inline-block ms-2 me-2 m-md-0">&nbsp;</div>
    </div>
    <div class="col-12 mb-2">
        <div class="col-12 col-md-3 d-inline-block text-center text-md-end">
            <label class="col-form-label text-center text-md-end" for="password">Password:</label>       
        </div>       
        <div class="col-10 col-md-7 d-inline-block">
            <input class="form-control" type="password" name="password" id="password" value="{{ fields.password }}" placeholder="Enter your password" required>
        </div>
        <div class="col-1 col-md-1 d-inline-block ms-2 me-2 m-md-0">
            <img class="show_password" src="/images/eye.svg" alt="eye" height="20">
        </div>
    </div>  
    <div class="row mb-3">
        <label class="col-12 text-center col-form-label" for="strength">Strength Password:</label>
        <div id="strength" class="col-12 strength">                                        
            <div class="strength_bar" id="strength_bar"></div>                                    
        </div>
        <p class="message" id="message"></p>
    </div>            
    <div class="col-12 col-md-6 d-inline-block">
        <a class="col-12 d-inline-block mb-3" href="#">Forgot password?</a>
        <button class="btn btn-outline-secondary" type="submit">Login</button>
    </div>
    <div class="col-sm-8 mx-auto">
        <p class="mt-3 d-inline-block">Don't have an account?</p> <a href="/register">Sign Up</a>
    </div>
</form>